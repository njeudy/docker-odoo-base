#!/bin/bash
# Shortcut to run Odoo in unit testing mode
set -e
addons=$1
shift
log INFO Executing Odoo in unittest mode for addons $addons
# HACK `--workers 0`: https://github.com/odoo/odoo/pull/14809
set -x
export PYTHONPTH=$PYTHONPATH:/opt/odoo/custom/src/odoo 
export PYTHONOPTIMIZE=0 
exec /usr/local/bin/odoo --workers 0 --test-enable --stop-after-init --update "$addons" "$@"
